<div class="mt-3 d-flex justify-content-center">
    <form class="border rounded w-50 p-3" method="post" action="/courses/{{ courses._id }}?_method=PUT">
        <h4 class="text-center text-success">Edit course in system</h4>
        <div class="mb-3">
            <label for="courseName" class="form-label">Course code</label>
            <input type="text" disabled name="_id" value="{{ courses._id }}" class="form-control" id="courseName">
        </div>
        <div class="mb-3">
            <label for="courseName" class="form-label">Course name</label>
            <input type="text" name="name" value="{{ courses.name }}" class="form-control" id="courseName">
        </div>
        <div class="mb-3">
            <label for="discription" class="form-label">Course discription</label>
            <textarea type="text" name="discription" class="form-control" id="discription">{{ courses.discription }}
            </textarea>
        </div>
        <div class="mb-3">
            <label for="video" class="form-label">Course video</label>
            <input type="text" value="{{ courses.videoId }}" name="videoId" class="form-control" id="video">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Course image</label>
            <input type="text" value="{{ courses.image }}" name="image" class="form-control" id="image">
        </div>
        <div class="mb-3">
            <label for="leve" class="form-label">Course leve</label>
            <input type="text" value="{{ courses.level }}" name="level" class="form-control" id="leve">
        </div>
        <button type="submit" class="btn btn-warning">Edit one</button>
    </form>
</div>