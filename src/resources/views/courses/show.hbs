<div class="container p-2 mt-2">
    <div class="row border p-2 rounded">
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-danger mt-2">Đăng ký</button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-center mt-2">{{ courses.name }}</h3>
                </div>
                <div class="col-md-12 mt-2">
                    <p>{{ courses.discription }}</p>
                </div>

                <div class="col-md-12 border p-2 rounded">
                    <iframe width="550" height="309" src="https://www.youtube.com/embed/{{ courses.videoId }}"
                        title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border p-1 rounded">
                <div class="row">
                    <div class="col-md-12">
                        <figure class="figure">
                            <img src="{{ courses.image }}" class="figure-img img-fluid rounded" alt="...">
                        </figure>
                    </div>
                    <div class="col-md-12 d-flex justify-content-center">
                        <p class="text-danger">Video</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>